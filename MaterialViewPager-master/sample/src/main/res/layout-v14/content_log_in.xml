<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/p1"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.florent37.materialviewpager.sample.bookcrow.LogIn"
    tools:showIn="@layout/activity_log_in">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:layout_marginBottom="133dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:drawableLeft="@drawable/c1"
            android:hint="@string/username"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:drawableLeft="@drawable/lock"
            android:id="@+id/pass"
            android:hint="@string/password"
            android:layout_below="@+id/switch1"
            android:layout_alignRight="@+id/switch1"
            android:layout_alignEnd="@+id/switch1"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            android:textColor="#000000" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/log"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:background="#f45e1c"
            android:layout_below="@+id/pass"
            android:layout_alignLeft="@+id/pass"
            android:layout_alignStart="@+id/pass" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:checked="false"
            android:thumbTint="@color/colorPrimaryDark"
            android:layout_below="@+id/username"
            android:layout_alignRight="@+id/username"
            android:layout_alignEnd="@+id/username"
            android:buttonTint="#030c4c" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/sign"
            android:layout_marginRight="20dp"
            android:background="#f45e1c"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@+id/log"
            android:layout_alignRight="@+id/pass"
            android:layout_alignEnd="@+id/pass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:id="@+id/forget"
            android:layout_below="@+id/pass"
            android:layout_alignRight="@+id/pass"
            android:layout_alignEnd="@+id/pass"
            android:textColor="#000000"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/pass"
            android:layout_alignLeft="@+id/pass"
            android:layout_alignStart="@+id/pass"
            android:id="@+id/error"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
