<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hrc.calculator.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:textAlignment="textEnd">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Text"
        android:text="0"
        android:textSize="45dp"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/divide"
        android:layout_alignEnd="@+id/divide" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/zero"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="."
        android:id="@+id/decimal"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equal"
        android:textSize="40dp"
        android:onClick="equal"
        android:background="#fb8fb0"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/decimal"
        android:layout_toEndOf="@+id/decimal" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:layout_above="@+id/zero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:textSize="30dp"
        android:layout_alignTop="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:layout_alignBottom="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:onClick="operator"
        android:id="@+id/add"
        android:textSize="30dp"
        android:background="#fb8fb0"
        android:layout_above="@+id/decimal"
        android:layout_toRightOf="@+id/decimal"
        android:layout_toEndOf="@+id/decimal" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:layout_above="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:layout_above="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/five"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sub"
        android:onClick="operator"
        android:textSize="30dp"
        android:background="#fb8fb0"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:layout_toEndOf="@+id/three" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:layout_above="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight"
        android:layout_alignTop="@+id/seven"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine"
        android:layout_alignBottom="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/mul"
        android:onClick="operator"
        android:layout_above="@+id/six"
        android:layout_toRightOf="@+id/six"
        android:layout_toEndOf="@+id/six"
        android:textSize="30dp"
        android:background="#fb8fb0" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/clear"
        android:textSize="30dp"
        android:background="#fb8fb0"
        android:layout_above="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divide"
        android:textSize="30dp"
        android:onClick="operator"
        android:background="#fb8fb0"
        android:ellipsize="start"
        android:enabled="true"
        android:layout_above="@+id/nine"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine" />

</RelativeLayout>
